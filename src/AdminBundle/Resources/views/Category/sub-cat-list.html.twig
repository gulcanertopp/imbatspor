{% extends 'AdminBundle:Default:base.html.twig' %}
{% block content %}
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    {% set break = false %}
                    {% for category  in categories %}
                        {% if break == false %}
                    <strong>{{ category.ParentName }} </strong> <b></b>

                            {% set break = true %}
                        {% endif %}
                    {% endfor %}

                    <strong> Kategori Listele  </strong>
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="alert alert-success" style="display: none">
                        <strong></strong>
                    </div>
                    <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                        <div class="row">
                            <div class="col-sm-12">
                                <table width="100%"
                                       class="table table-striped table-bordered table-hover dataTable no-footer dtr-inline"
                                       id="dataTables-example" role="grid" aria-describedby="dataTables-example_info"
                                       style="width: 100%;">
                                    <thead>
                                    <tr role="row">
                                        <th class="sorting_asc" tabindex="0" aria-controls="dataTables-example"
                                            rowspan="1" colspan="1" aria-sort="ascending"
                                            aria-label="Rendering engine: activate to sort column descending"
                                            style="width: 148px;">ID
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1"
                                            colspan="1" aria-label="Browser: activate to sort column ascending"
                                            style="width: 180px;">Kategori Adı
                                        </th>
                                        <th class="sorting" tabindex="0" aria-controls="dataTables-example" rowspan="1"
                                            colspan="1" aria-label="Platform(s): activate to sort column ascending"
                                            style="width: 166px;">Açıklama
                                        </th>
                                    </thead>
                                    <tbody>
                                    {% for category  in categories %}
                                        <tr class="gradeA odd" role="row">
                                            <td class="sorting_1">{{ category.ID }}</td>
                                            <td>{{ category.CategoryName }}</td>
                                            <td><span class="is-cat-desc">{{ category.Description }}</span>

                                                <div class="is-main-cat-desc">
                                                    <button type="button" data-id="{{ category.ID }}"
                                                            class="btn btn-danger delete-cat glyphicon glyphicon-remove" title="Sil"></button>
                                                    <button type="button"
                                                            onclick="location.href='{{ url("index_admin_save_subcategory",{ 'id' :category.ID }) }}';"
                                                            class="edit btn btn-primary glyphicon glyphicon-edit" title="Düzenle"></button>
                                                </div>

                                            </td>


                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        $(document).on('click','.delete-cat',function () {
            var categoryId= $(this).data('id');
            $.post('{{ url('ajax_admin_delete_category') }}' , {
                categoryID:categoryId
            }, function (result) {
                console.log(result);
                if(result.success){
                   location.reload();
                    $('.alert-success strong').text(result.message);
                    $('.alert-success').slideDown();

                }else{
                    $('.alert-success').text(result.message);
                    $('.alert-success').slideDown();
                }

            });
        });

    </script>
{% endblock %}